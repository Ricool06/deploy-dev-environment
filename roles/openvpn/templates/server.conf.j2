port 1194
proto udp
dev tun
ca {{ openvpn_users[1].home_directory }}/pki/ca.crt
cert {{ openvpn_users[1].home_directory }}/pki/{{ openvpn.common_name }}.crt
key {{ openvpn_users[1].home_directory }}/pki/private/{{ openvpn.common_name }}.key
dh {{ openvpn_users[1].home_directory }}/pki/dh.pem
server 10.8.0.0 255.255.255.0
ifconfig-pool-persist ipp.txt
keepalive 10 120
tls-auth {{ openvpn_users[1].home_directory }}/pki/private/ta.key 0
cipher AES-256-CBC
persist-key
persist-tun
verb 0
explicit-exit-notify 1
push "redirect-gateway def1"
push "dhcp-option DNS 8.8.8.8"
push "dhcp-option DNS 8.8.4.4"
